{% extends "modelspages/index.html.twig" %}

  {% block main %}


 {% if genres %}

      <h3>Rechercher par th√®me</h3>

      <nav class="navbar navbar-expand-lg">
        <a class="navbar-brand" href="#"></a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarNav">
    <ul class="navbar-nav">
        <ul class="navbar-nav ">
      {% for genre in genres %}
            <li class='nav-item genre-items'>
              <a href="home/genre/{{genre}}">{{ genre }}</a>
            </li>
      {% endfor %}
        </ul>
      </nav>

    {% endif %}


    {% if films %}
      <h3>A l'affiche</h3>
      <div class="row">
        {% for key,film in films %}
          <div id="blocfilm" title="{{ film.titre }}" class="col-sm-12 col-md-6 col-lg-3">
            <div class="illustration"
              style="
              width:100%;
              height:300px;
              background-image:url({{ docRoot }}public/images/{{ film.affiche }}.jpg);
              background-repeat:no-repeat;
              background-position:center center;
              ">

            </div>
            <a href="home/film/{{film.id }}">
              <div class="texte">
                <h4 class="titrefilm">  {{ film.titre }} </h4>
                <p> {{ film.annee }} - {{ film.genre }} </p>
              </div>
            </a>
          </div>
        {% endfor %}
      </div>
    {% endif %}




    {% if film %}

   <div class="col-12" id="filmMain">
     <div class="row">
<div class="col-12">
    <h4> {{ film.titre }} </h4>
</div>
     </div>
        <div class="row">
          <div class="col-2 offset-md-2">
            <img id="affichefilm" class="img-fluid" src="{{ docRoot }}public/images/{{ film.affiche }}.jpg">
          </div>
          <div class="col-7">
            <ul>
              <p> {{ film.description }} </p>
              <li>{{ film.genre }}</li>
              <li>{{ film.annee }}</li>
              <li>{{ film.realisateurs }}</li>
              <li>{{ film.acteurs }}</li>
            </ul>
          </div>
        </div>
        <div class="row">
          <div class="col-12">
            <div class="row">
              <div id="footerimg" class="col-12">
              </div>
        </div>
      </div>



    {% endif %}


    {% if filmsrecherches %}

        <h2> >> {{genreRecherche}}</h2>
        <div class="row">
          {% for key,film in filmsrecherches %}
            <div class="col-sm-12 col-md-6 col-lg-3">
              <a href="../film/{{ film.id }}">
                <h4> {{ film.titre }} </h4>
                <img class="img-fluid" src="{{ docRoot }}public/images/{{ film.affiche }}.jpg">
                <p> {{ film.genre }} </p>
              </a>
            </div>
          {% endfor %}
        </div>

      {% endif %}

  {% endblock %}
