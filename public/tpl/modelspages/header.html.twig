<div id="header-defaut">

    <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
            <li data-target="#myCarousel" data-slide-to="3"></li>
            <li data-target="#myCarousel" data-slide-to="4"></li>
            <li data-target="#myCarousel" data-slide-to="5"></li>

        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner" role="listbox">
            <div class="item active">
                <img src="../../images/carousel/coco-csl.jpg" alt="extrait du film Coco">
                <div class="carousel-caption">
                    <h3>Coco</h3>
                    <p>Pour un moment de détente en famille</p>
                </div>
            </div>

            <div class="item">
                <img src="../../images/carousel/shining-csl.jpg" alt="extrait du film the Shining">
                <div class="carousel-caption">
                    <h3>The Shining</h3>
                    <p>Pour se faire peur</p>
                </div>
            </div>

            <div class="item">
                <img src="../../images/carousel/cinquieme-csl.jpg" alt="extrait du film Cinquième Element">
                <div class="carousel-caption">
                    <h3>Le Cinquième Elément</h3>
                    <p>Pour partager un moment entre amis</p>
                </div>
            </div>

            <div class="item">
                <img src="../../images/carousel/interstellar-csl.jpg" alt="extrait du film Interstellar">
                <div class="carousel-caption">
                    <h3>Interstellar</h3>
                    <p>Pour se tirer les cheveux</p>
                </div>
            </div>

            <div class="item">
                <img src="../../images/carousel/ligne-verte-csl.jpg" alt="extrait du film la Ligne Verte">
                <div class="carousel-caption">
                    <h3>La Ligne Verte</h3>
                    <p>Pour un moment d'émotion</p>
                </div>
            </div>

            <div class="item">
                <img src="../../images/carousel/odyssee-csl.jpg" alt="extrait du film 2001: l'Odyssee de l'Espace">
                <div class="carousel-caption">
                    <h3>2001 : L'Odyssée de l'Espace</h3>
                    <p>Pour voir ou revoir les classiques du cinéma</p>
                </div>
            </div>
        </div>

        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>
<a href="./{{ docRoot }}">
  <div id="header-defaut">
    <h1>{{ sitetitle }}</h1>
    <p>{{ sitedescription }}</p>
  </div>
</a>
